{
  "name": "olga",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^6.0.0-alpha.4",
    "react-router-dom": "^6.0.0-alpha.4",
    "react-scripts": "3.4.1",
    "use-media-query-hook": "^0.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "postcss": "^7.0.27",
    "tailwindcss": "^1.4.0"
  },
  "scripts": {
    "build:style": "export NODE_ENV=development && tailwind build src/styles/index.css -o src/styles/tailwind.css",
    "build:purge": "export NODE_ENV=production && tailwind build src/styles/index.css -o src/styles/tailwind.css",
    "deploy": "npm run build:purge && now --prod",
    "start": "npm run build:style && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
